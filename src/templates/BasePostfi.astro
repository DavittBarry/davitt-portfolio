---
import type { IFrontmatter } from 'astro-boilerplate-components';

import { BlogPostfi } from '@/partials/BlogPostfi';
import Basefi from '@/templates/Basefi.astro';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  content: IFrontmatter;
}

const { content } = Astro.props as Props;
const title = `${content.title} - ${AppConfig.site_name}`;
---

<Basefi head={{ title, description: content.description }}>
  <BlogPostfi frontmatter={content}>
    <slot></slot>
  </BlogPostfi>
</Basefi>
