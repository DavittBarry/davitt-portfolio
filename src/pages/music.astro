---
import Base from '@/templates/Base.astro';
import { Section } from 'astro-boilerplate-components';

const title = "Music Production - Davitt Barry";
const description = "Original music composition and production services";
---

<Base head={{ title, description }}>
  <Section>
    <div className="min-h-[60vh] flex flex-col justify-center items-center text-center">
      <h1 className="text-4xl font-light text-white mb-4">
        Music <span className="text-cyan-400">Production</span>
      </h1>
      <p className="text-xl text-neutral-400 mb-8">Coming Soon</p>
      <p className="text-neutral-500 max-w-md">
        This section is currently under development. 
        Check back soon for my music portfolio, latest releases, and production services.
      </p>
      <a 
        href="/" 
        className="mt-8 border border-neutral-700 px-4 py-2 text-neutral-400 hover:text-accent hover:border-accent transition-all"
      >
        ‚Üê Back to Home
      </a>
    </div>
  </Section>
</Base>
