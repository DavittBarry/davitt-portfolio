---
import Base from '@/templates/Base.astro';

const title = 'Music - Davitt Barry';
const description =
  'Original music compositions by Davitt Barry. Electronic, ambient, and experimental soundscapes.';
---

<Base head={{ title, description }}>
  <div class="container mx-auto px-6 py-12">
    <!-- Hero Section -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <h1 class="mb-4 text-5xl font-light text-white">
        Original <span class="text-emerald-400">Music</span>
      </h1>
      <p class="text-xl text-neutral-400">
        My musical compositions and productions
      </p>
    </div>

    <!-- Featured Tracks -->
    <div class="mx-auto mb-16 max-w-6xl">
      <h2 class="mb-8 text-3xl font-light text-white">Featured Tracks</h2>
      <div class="space-y-6">
        <!-- Track 1: Cooloosa SL -->
        <div
          class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8 transition-all hover:border-emerald-400/50"
        >
          <div
            class="mb-4 flex flex-col md:flex-row md:items-center md:justify-between"
          >
            <div>
              <h3 class="mb-2 text-xl text-white">Cooloosa St.</h3>
              <p class="text-sm text-neutral-500">Electronic / Experimental</p>
            </div>
          </div>

          <audio controls class="mb-4 h-12 w-full">
            <source src="/assets/audio/Cooloosa St..mp3" type="audio/mpeg" />
            Your browser does not support the audio element.
          </audio>

          <p class="text-sm text-neutral-400">
            An experimental electronic piece exploring atmospheric textures and
            rhythmic patterns.
          </p>
        </div>

        <!-- Track 2: Mote in Mine -->
        <div
          class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8 transition-all hover:border-emerald-400/50"
        >
          <div
            class="mb-4 flex flex-col md:flex-row md:items-center md:justify-between"
          >
            <div>
              <h3 class="mb-2 text-xl text-white">Mote in Mine</h3>
              <p class="text-sm text-neutral-500">Electronic / Prog</p>
            </div>
          </div>

          <audio controls class="mb-4 h-12 w-full">
            <source src="/assets/audio/Mote in Mine.mp3" type="audio/mpeg" />
            Your browser does not support the audio element.
          </audio>

          <p class="text-sm text-neutral-400">
            A deep, immersive journey through subterranean soundscapes and
            evolving harmonies.
          </p>
        </div>

        <!-- Track 3: Polishing Stones -->
        <div
          class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8 transition-all hover:border-emerald-400/50"
        >
          <div
            class="mb-4 flex flex-col md:flex-row md:items-center md:justify-between"
          >
            <div>
              <h3 class="mb-2 text-xl text-white">Polishing Stones</h3>
              <p class="text-sm text-neutral-500">
                Experimental / Sound Design
              </p>
            </div>
          </div>

          <audio controls class="mb-4 h-12 w-full">
            <source src="/assets/audio/Polishing Stones.mp3" type="audio/mpeg"
            />
            Your browser does not support the audio element.
          </audio>

          <p class="text-sm text-neutral-400">
            Textural exploration combining organic and synthetic elements in a
            meditative composition.
          </p>
        </div>
      </div>

      <!-- Custom styling for audio players -->
      <style>
        audio {
          background-color: #171717;
          border-radius: 4px;
          border: 1px solid #404040;
        }
        audio::-webkit-media-controls-panel {
          background-color: #171717;
        }
        audio::-webkit-media-controls-current-time-display,
        audio::-webkit-media-controls-time-remaining-display {
          color: #fff;
        }
      </style>
    </div>

    <!-- Production Services Link -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <div
        class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
      >
        <h2 class="mb-4 text-2xl font-light text-white">
          Do you need music, mixing, or production for your project?
        </h2>
        <p class="mb-6 text-neutral-400">
          I offer professional music production, mixing, and mastering services.
          Whether you need original compositions, sound design, or
          post-production work, I can help bring your audio vision to life.
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="/audio-services"
            class="inline-block border border-cyan-400 px-6 py-3 text-cyan-400 transition-all hover:bg-cyan-400/10"
          >
            Audio Engineering Services →
          </a>
          <a
            href="/contact"
            class="inline-block border border-emerald-400 px-6 py-3 text-emerald-400 transition-all hover:bg-emerald-400/10"
          >
            Get in Touch →
          </a>
        </div>
      </div>
    </div>

    <!-- Equipment Section -->
    <div class="mx-auto max-w-4xl">
      <h2 class="mb-8 text-3xl font-light text-white">Studio Setup</h2>
      <div
        class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
      >
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
          <div>
            <h3 class="mb-4 text-lg text-emerald-400">Software</h3>
            <ul class="space-y-2 text-neutral-400">
              <li>• Ableton Live</li>
            </ul>
          </div>
          <div>
            <h3 class="mb-4 text-lg text-emerald-400">Hardware</h3>
            <ul class="space-y-2 text-neutral-400">
              <li>
                • Audio Interface: Audient (preamp with Ferrofish converter)
              </li>
              <li>
                • Monitors: Genelec monitoring speakers (volume controlled via
                SPL monitor controller)
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Base>
