---
import Basefi from '@/templates/Basefi.astro';
import { Section } from 'astro-boilerplate-components';

const title = "Audiopalvelut - Davitt Barry";
const description = "Ammattimaiset musiikin tuotanto-, miksaus- ja masterointipalvelut";
---

<Basefi head={{ title, description }}>
  <Section>
    <div className="min-h-[60vh] flex flex-col justify-center items-center text-center">
      <h1 className="text-4xl font-light text-white mb-4">
        Audio<span className="text-cyan-400">palvelut</span>
      </h1>
      <p className="text-xl text-neutral-400 mb-8">Tuotanto • Miksaus • Masterointi</p>
      <p className="text-neutral-500 max-w-md">
        Tämä osio on parhaillaan kehitteillä. 
        Tiedot äänen tuotanto-, miksaus- ja masterointipalveluista, hinnoista ja portfoliosta tulossa pian.
      </p>
      <a 
        href="/fi/" 
        className="mt-8 border border-neutral-700 px-4 py-2 text-neutral-400 hover:text-accent hover:border-accent transition-all"
      >
        ← Takaisin etusivulle
      </a>
    </div>
  </Section>
</Basefi>
