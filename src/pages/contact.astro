---
import Base from '@/templates/Base.astro';
import { Section } from 'astro-boilerplate-components';

const title = "Contact - Davitt Barry";
const description = "Get in touch for collaborations and projects";
---

<Base head={{ title, description }}>
  <Section>
    <div className="min-h-[60vh] flex flex-col justify-center items-center">
      <div className="max-w-2xl w-full px-4">
        <h1 className="text-4xl font-light text-white mb-8 text-center">
          Get In <span className="text-cyan-400">Touch</span>
        </h1>
        
        <div className="bg-dark-100 border border-neutral-800 p-8">
          <div className="space-y-6">
            <div>
              <h2 className="text-xl font-light text-white mb-2">Location</h2>
              <p className="text-neutral-400">Helsinki, Finland</p>
              <p className="text-sm text-neutral-500 mt-1">Available for remote work globally</p>
            </div>
            
            <div>
              <h2 className="text-xl font-light text-white mb-2">Email</h2>
              <a 
                href="mailto:davittbarry333@gmail.com" 
                className="text-cyan-400 hover:text-cyan-300 transition-colors"
              >
                davittbarry333@gmail.com
              </a>
            </div>
            
            <div>
              <h2 className="text-xl font-light text-white mb-2">Connect</h2>
              <div className="flex gap-4">
                <a 
                  href="https://github.com/DavittBarry" 
                  className="text-neutral-400 hover:text-accent transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  GitHub
                </a>
                <a 
                  href="https://www.linkedin.com/in/davittbarry/" 
                  className="text-neutral-400 hover:text-accent transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  LinkedIn
                </a>
              </div>
            </div>
            
            <div className="pt-4 border-t border-neutral-800">
              <p className="text-neutral-400 text-sm">
                For project inquiries, collaboration opportunities, or general questions, 
                feel free to reach out via email. I typically respond within 24-48 hours.
              </p>
            </div>
          </div>
        </div>
        
        <div className="text-center mt-8">
          <a 
            href="/" 
            className="border border-neutral-700 px-4 py-2 text-neutral-400 hover:text-accent hover:border-accent transition-all inline-block"
          >
            ‚Üê Back to Home
          </a>
        </div>
      </div>
    </div>
  </Section>
</Base>
