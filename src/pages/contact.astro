---
import Base from '@/templates/Base.astro';

const title = 'Contact - Davitt Barry';
const description =
  'Get in touch for IT development, music production, or audio engineering services.';
---

<Base head={{ title, description }}>
  <div class="container mx-auto px-6 py-12">
    <!-- Hero Section -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <h1 class="mb-4 text-5xl font-light text-white">
        Get in <span class="text-accent">Touch</span>
      </h1>
      <p class="text-xl text-neutral-400">Let's discuss your next project</p>
    </div>

    <!-- Contact Options -->
    <div class="mx-auto mb-16 max-w-4xl">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        <!-- Direct Contact -->
        <div
          class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
        >
          <h2 class="mb-6 text-2xl font-light text-white">Direct Contact</h2>

          <div class="mb-8 space-y-4">
            <div>
              <p class="mb-1 text-sm text-neutral-500">Email</p>
              <a
                href="mailto:davittbarry333@gmail.com"
                class="text-lg text-accent transition-colors hover:text-accent/80"
              >
                davittbarry333@gmail.com
              </a>
            </div>

            <div>
              <p class="mb-1 text-sm text-neutral-500">Location</p>
              <p class="text-lg text-neutral-300">Helsinki, Finland</p>
            </div>

            <div>
              <p class="mb-1 text-sm text-neutral-500">Availability</p>
              <p class="text-lg text-neutral-300">Open for projects</p>
            </div>
          </div>

          <div class="flex gap-4">
            <a
              href="https://github.com/DavittBarry"
              class="border border-neutral-700 px-4 py-2 text-neutral-400 transition-all hover:border-accent hover:text-accent"
              target="_blank"
              rel="noopener noreferrer"
            >
              GitHub
            </a>
            <a
              href="https://www.linkedin.com/in/davittbarry/"
              class="border border-neutral-700 px-4 py-2 text-neutral-400 transition-all hover:border-cyan-400 hover:text-cyan-400"
              target="_blank"
              rel="noopener noreferrer"
            >
              LinkedIn
            </a>
          </div>
        </div>

        <!-- Services -->
        <div
          class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
        >
          <h2 class="mb-6 text-2xl font-light text-white">
            Services Available
          </h2>

          <div class="space-y-4">
            <div class="border-l-2 border-accent pl-4">
              <h3 class="mb-1 text-white">IT & Development</h3>
              <p class="text-sm text-neutral-400">
                Web development, consulting, technical solutions
              </p>
            </div>

            <div class="border-l-2 border-emerald-400 pl-4">
              <h3 class="mb-1 text-white">Music Production</h3>
              <p class="text-sm text-neutral-400">
                Composition, arrangement, production
              </p>
            </div>

            <div class="border-l-2 border-cyan-400 pl-4">
              <h3 class="mb-1 text-white">Audio Engineering</h3>
              <p class="text-sm text-neutral-400">
                Mixing, mastering, audio restoration
              </p>
            </div>
          </div>

          <div class="mt-8">
            <p class="mb-2 text-sm text-neutral-500">Response Time</p>
            <p class="text-neutral-300">Usually within 24-48 hours</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Project Inquiry Section -->
    <div class="mx-auto mb-16 max-w-4xl">
      <div
        class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
      >
        <h2 class="mb-6 text-2xl font-light text-white">Project Inquiries</h2>

        <p class="mb-6 text-neutral-400">
          When reaching out about a project, please include:
        </p>

        <ul class="mb-8 space-y-3 text-neutral-400">
          <li class="flex items-start">
            <span class="mr-3 text-accent">•</span>
            <span>Project type and scope</span>
          </li>
          <li class="flex items-start">
            <span class="mr-3 text-accent">•</span>
            <span>Timeline and deadlines</span>
          </li>
          <li class="flex items-start">
            <span class="mr-3 text-accent">•</span>
            <span>Budget range (if applicable)</span>
          </li>
          <li class="flex items-start">
            <span class="mr-3 text-accent">•</span>
            <span>Any specific requirements or preferences</span>
          </li>
        </ul>

        <a
          href="mailto:davittbarry333@gmail.com?subject=Project%20Inquiry"
          class="inline-block border border-accent px-6 py-3 text-accent transition-all hover:bg-accent/10"
        >
          Send Project Inquiry →
        </a>
      </div>
    </div>

    <!-- CV Downloads with fancy style -->
    <div class="mx-auto max-w-4xl">
      <h2 class="mb-6 text-center text-2xl font-light text-white">
        Download CV
      </h2>
      <div class="flex flex-col justify-center gap-4 sm:flex-row">
        <a
          href="/Davitt-Barry-CV-English.pdf"
          download
          class="group relative overflow-hidden border border-cyan-500 px-6 py-3 text-center text-cyan-400 transition-all duration-300 hover:text-dark"
        >
          <span
            class="absolute inset-0 origin-left scale-x-0 bg-cyan-500 transition-transform duration-300 group-hover:scale-x-100"
          ></span>
          <span class="relative font-light">Download in English</span>
        </a>
        <a
          href="/Davitt-Barry-CV-Suomeksi.pdf"
          download
          class="group relative overflow-hidden border border-emerald-500 px-6 py-3 text-center text-emerald-400 transition-all duration-300 hover:text-dark"
        >
          <span
            class="absolute inset-0 origin-left scale-x-0 bg-emerald-500 transition-transform duration-300 group-hover:scale-x-100"
          ></span>
          <span class="relative font-light">Lataa suomeksi</span>
        </a>
      </div>
    </div>
  </div>
</Base>
