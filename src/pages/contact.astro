---
import Base from '@/templates/Base.astro';

const title = 'Contact - Davitt Barry';
const description =
  'Get in touch for IT development, music production, or audio engineering services.';
---

<Base head={{ title, description }}>
  <div class="container mx-auto px-6 py-12">
    <!-- Hero Section -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <h1 class="mb-4 text-5xl font-light text-white">
        Get in <span class="text-accent">Touch</span>
      </h1>
      <p class="text-xl text-neutral-400">Let's discuss your next project</p>
    </div>

    <!-- Contact Form and Info -->
    <div class="mx-auto mb-16 max-w-4xl">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
        <!-- Contact Form -->
        <div
          class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
        >
          <h2 class="mb-6 text-2xl font-light text-white">Send a Message</h2>

          <!-- Using Formspree for form handling -->
          <form
            action="https://formspree.io/f/movnokwq"
            method="POST"
            class="space-y-4"
          >
            <div>
              <label for="name" class="mb-2 block text-sm text-neutral-400"
                >Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full border border-neutral-700 bg-neutral-900 px-4 py-2 text-white transition-colors focus:border-accent focus:outline-none"
              />
            </div>

            <div>
              <label for="email" class="mb-2 block text-sm text-neutral-400"
                >Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full border border-neutral-700 bg-neutral-900 px-4 py-2 text-white transition-colors focus:border-accent focus:outline-none"
              />
            </div>

            <div>
              <label for="subject" class="mb-2 block text-sm text-neutral-400"
                >Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full border border-neutral-700 bg-neutral-900 px-4 py-2 text-white transition-colors focus:border-accent focus:outline-none"
              />
            </div>

            <div>
              <label for="message" class="mb-2 block text-sm text-neutral-400"
                >Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full resize-none border border-neutral-700 bg-neutral-900 px-4 py-2 text-white transition-colors focus:border-accent focus:outline-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full border border-accent px-6 py-3 text-accent transition-all hover:bg-accent/10"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <div
            class="mb-8 border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
          >
            <h2 class="mb-6 text-2xl font-light text-white">Direct Contact</h2>

            <div class="space-y-4">
              <div>
                <p class="mb-1 text-sm text-neutral-500">Email</p>
                <p class="text-lg text-neutral-300">davittbarry333@gmail.com</p>
              </div>

              <div>
                <p class="mb-1 text-sm text-neutral-500">Location</p>
                <p class="text-lg text-neutral-300">Helsinki, Finland</p>
              </div>

              <div>
                <p class="mb-1 text-sm text-neutral-500">Availability</p>
                <p class="text-lg text-neutral-300">Open for projects</p>
              </div>
            </div>

            <div class="mt-6 flex gap-4">
              <a
                href="https://github.com/DavittBarry"
                class="border border-neutral-700 px-4 py-2 text-neutral-400 transition-all hover:border-accent hover:text-accent"
                target="_blank"
                rel="noopener noreferrer"
              >
                GitHub
              </a>
              <a
                href="https://www.linkedin.com/in/davittbarry/"
                class="border border-neutral-700 px-4 py-2 text-neutral-400 transition-all hover:border-cyan-400 hover:text-cyan-400"
                target="_blank"
                rel="noopener noreferrer"
              >
                LinkedIn
              </a>
            </div>
          </div>

          <!-- Services Summary -->
          <div
            class="border border-neutral-800 bg-gradient-to-br from-neutral-900 to-neutral-800 p-8"
          >
            <h3 class="mb-4 text-xl font-light text-white">
              Services Available
            </h3>
            <div class="space-y-3">
              <div class="border-l-2 border-accent pl-4">
                <h4 class="text-white">IT & Development</h4>
                <p class="text-sm text-neutral-400">
                  Web development, consulting, technical solutions
                </p>
              </div>
              <div class="border-l-2 border-emerald-400 pl-4">
                <h4 class="text-white">Music</h4>
                <p class="text-sm text-neutral-400">
                  Composition, arrangement, production
                </p>
              </div>
              <div class="border-l-2 border-cyan-400 pl-4">
                <h4 class="text-white">Audio Engineering</h4>
                <p class="text-sm text-neutral-400">
                  Mixing, mastering, audio restoration
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Base>
